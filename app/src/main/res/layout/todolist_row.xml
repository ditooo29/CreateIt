<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="@dimen/dimen_10"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/dimen_10">


    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dot_height"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dot_margin_right"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:textSize="@dimen/dot_text_size" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="379dp"
        android:layout_height="83dp"
        android:layout_toRightOf="@id/dot"
        android:textColor="@color/grayPrimary"
        android:textSize="@dimen/timestamp" />

    <TextView
        android:id="@+id/note"
        android:layout_width="382dp"
        android:layout_height="84dp"
        android:layout_below="@id/timestamp"
        android:layout_toRightOf="@id/dot"
        android:textColor="@color/black"
        android:textSize="@dimen/note_list_text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:text="Let's Do This!"
        android:textColor="@color/GreenPrimary" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timestamp"
        android:layout_alignTop="@+id/timestamp"
        android:layout_alignEnd="@+id/timestamp"
        android:layout_alignBottom="@+id/timestamp"
        android:layout_marginStart="257dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/timestamp"
        android:layout_alignTop="@+id/timestamp"
        android:layout_alignEnd="@+id/timestamp"
        android:layout_alignBottom="@+id/timestamp"
        android:layout_marginStart="273dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="39dp"
        android:text="Task Status:"
        android:textColor="@color/blueSecondary"
        android:textSize="12dp" />

</RelativeLayout>