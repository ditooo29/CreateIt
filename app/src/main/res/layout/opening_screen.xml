<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary_green"
    tools:context=".OpeningScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364"
        app:srcCompat="@drawable/whitelogo" />

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="194dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MainActivity">

        <!--id开发者可自定义-->
        <!--id developers can customize-->
        <com.huawei.hms.support.hwid.ui.HuaweiIdAuthButton
            android:id="@+id/HuaweiIdAuthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/HuaweiIdSignOutButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/blueSecondary"
            android:text="Sign Out"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/HuaweiIdCancelAuthButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/blueSecondary"
            android:text="Cancel Authorization"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="227dp"
        android:layout_height="58dp"
        android:layout_marginBottom="244dp"
        android:background="@drawable/bg_btn_blue_primary"
        android:backgroundTint="@color/GreenPrimary"
        android:fontFamily="@font/mmedium"
        android:text="Lets Get Started\n(Without Login)"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/LogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="709dp" />

</androidx.constraintlayout.widget.ConstraintLayout>